rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Sightings collection
    match /sightings/{sightingId} {
      // Anyone can read sightings (for public viewing)
      allow read: if true;
      
      // Only authenticated users can create sightings
      allow create: if isAuthenticated();
      
      // Only authenticated users can update sightings (for corrections)
      allow update: if isAuthenticated();
      
      // Only authenticated users can delete sightings
      allow delete: if isAuthenticated();
    }

    // User profiles and Facebook connections
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
